<body id="page-top">
        <!-- Navigation-->
        <a class="menu-toggle rounded" href="#"><i class="fas fa-bars"></i></a>
        <nav id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand"><a href="#page-top">Sentiment Analysis</a></li>
                <li class="sidebar-nav-item"><a href="#page-top">Home</a></li>
                <li class="sidebar-nav-item"><a href="#try-now">Try Now</a></li>
            </ul>
        </nav>
        <!-- Header-->
        <header class="masthead d-flex align-items-center">
            <div class="container px-4 px-lg-5 text-center">
                <h1 class="mb-1">Bulk Sentiment Analysis</h1>
                <h3 class="mb-5"><em>We will analyze your text in all languages</em></h3>
                <a class="btn btn-primary btn-xl" href="#try-now">Try Now</a>
            </div>
        </header>
        <!-- try-now-->
        <section class="content-section bg-light" id="try-now">
            <div class="container px-4 px-lg-5 text-center">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-lg-10">
                        <h2>Excel as data source</h2>
                        <p class="lead mb-5">
                            Use excel file as data source. An example of an excel file format like this
                            <a href="/excel-example">Excel Example</a>
                        </p>
                        <form action="/upload-excel" method="post" enctype="multipart/form-data">
                          <input type="file" name="excel-sentiment" id="" required class="form-control" accept=".xlsx">
                          <button type="submit" class="btn btn-dark mt-2">Upload File</button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
        <!-- Services-->
        <section class="content-section" id="portfolio">
            <div class="container px-4 px-lg-5">
            <table class="table table-striped table-hover" id="table">
              <tr>
                <th>Text</th>
                <th>Result</th>
              </tr>
              <% datas.forEach(data => { %>
              <tr>
                  <td><%= data.text %> </td>
                  <td>
                        <% if(data.score > 0 ) { %>
                            Positif
                        <% } else if(data.score < 0) { %>
                            Negatif
                        <% } else { %>
                            Netral
                        <% } %> 
                  </td>
              </tr>
              <% }) %> 
            </table>
            </div>
        </section>

        <footer class="footer text-center">
            <div class="container px-4 px-lg-5">
